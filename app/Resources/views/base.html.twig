<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="{{ description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalable=no">
    <title>{{ title }}</title>

    {# Add to homescreen for Chrome on Android #}
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="icon" sizes="192x192" href="{{ asset('bundles/app/icon/android-desktop.png') }}">

    {# Add to homescreen for Safari on iOS #}
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="{{ title }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/app/icon/apple-touch-icon.png') }}">

    {# Tile icon for Win8 (144x144 + tile color) #}
    <meta name="msapplication-TileImage" content="{# TODO: images/touch/ms-touch-icon-144x144-precomposed.png #}">
    <meta name="msapplication-TileColor" content="{# TODO: #3372DF #}">

    {# Favicon #}
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/app/icon/favicon.ico') }}">

    {% block stylesheets %}

        {# Google Fonts #}
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet"
              type="text/css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

        {# Vendor styles #}
        <link rel="stylesheet" href="{{ asset('bundles/app/vendor/mdl/1.3.0/material.min.css') }}">

        {# Project styles #}
        {% stylesheets '@base_stylesheets' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
</head>
<body>
{% block body %}
    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
        <header class="demo-header mdl-layout__header mdl-color--grey-100 mdl-color-text--grey-600">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title">{{ title }}</span>
                <div class="mdl-layout-spacer"></div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable">
                    <label class="mdl-button mdl-js-button mdl-button--icon" for="search">
                        <i class="material-icons">search</i>
                    </label>
                    <div class="mdl-textfield__expandable-holder">
                        <input class="mdl-textfield__input" type="text" id="search">
                        <label class="mdl-textfield__label" for="search">Enter your query...</label>
                    </div>
                </div>
            </div>
        </header>
        <div class="demo-drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">
            <header class="demo-drawer-header"
                    style="background-image: url('{{ asset('bundles/app/img/dog.png') }}');">
                <img src="{{ asset('bundles/app/img/user.jpg') }}" class="demo-avatar">
                <div class="demo-avatar-dropdown">
                    <span>hello@example.com</span>
                    <div class="mdl-layout-spacer"></div>
                    <button id="accbtn" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                        <i class="material-icons" role="presentation">arrow_drop_down</i>
                        <span class="visuallyhidden">Account</span>
                    </button>
                    <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="accbtn">
                        <li class="mdl-menu__item">
                            <i class="material-icons">exit_to_app</i>
                            <span>Logout</span>
                        </li>
                    </ul>
                </div>
            </header>
            {% block navigation %}
                <nav class="demo-navigation mdl-navigation mdl-color--blue-grey-800">
                    {% include 'view/inc/navigation.html.twig' %}
                </nav>
            {% endblock %}
        </div>
        <main class="mdl-layout__content mdl-color--grey-100">
            <div class="mdl-grid demo-content">
                {% block content %}
                {% endblock %}
            </div>
        </main>
    </div>
{% endblock %}

{% block javascripts %}

    {# Vendor styles #}
    <script src="{{ asset('bundles/app/vendor/mdl/1.3.0/material.min.js') }}"></script>

    {# Project scripts #}
    {% javascripts '@base_scripts' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>